{
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length",
    "88"
  ],
  "python.analysis.typeCheckingMode": "strict",
  "python.autoComplete.addBrackets": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestArgs": [
    "--cov",
    "--cov-report=term-missing",
    "--durations=10"
  ],
  "django.enabled": true,
  "django.template.languageServer": "html",
  "django.template.autoClosingTags": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [
    88
  ],
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "none",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/.DS_Store": true
  },
  "lsp": {
    "pyright": {
      "enabled": true,
      "config": {
        "python.analysis.autoSearchPaths": true,
        "python.analysis.diagnosticMode": "workspace",
        "python.analysis.useLibraryCodeForTypes": true
      }
    },
    "django-language-server": {
      "enabled": true,
      "command": [
        "django-language-server",
        "--stdio"
      ],
      "filetypes": [
        "python",
        "djangohtml"
      ]
    }
  },
  "treesitter": {
    "ensure_installed": [
      "python",
      "django",
      "html",
      "css",
      "javascript"
    ],
    "highlight": {
      "enable": true,
      "additional_vim_regex_highlighting": false
    }
  },
  "null_ls": {
    "sources": {
      "formatting": [
        "black",
        "isort"
      ],
      "diagnostics": [
        "flake8",
        "mypy",
        "pylint"
      ],
      "code_actions": [
        "refactoring"
      ]
    }
  },
  "debugger": {
    "python": {
      "adapter": "debugpy",
      "configurations": {
        "Django": {
          "program": "${workspaceFolder}/manage.py",
          "args": [
            "runserver"
          ],
          "django": true
        },
        "Python": {
          "program": "${file}",
          "pythonPath": "${workspaceFolder}/.venv/bin/python"
        }
      }
    }
  },
  "mappings": {
    "n": {
      "<leader>rr": ":!python manage.py runserver<CR>",
      "<leader>mm": ":!python manage.py migrate<CR>",
      "<leader>tm": ":!python manage.py test<CR>",
      "<leader>fm": ":!python manage.py makemigrations<CR>",
      "<leader>sh": ":!python manage.py shell<CR>"
    }
  }
}
