post_install() {
  echo "amd-mode installed!"
  echo "Add yourself to the 'video' and 'wheel' groups if not already:"
  echo "  sudo usermod -aG video,wheel $USER"
  echo "Then log out and back in."
  echo ""
  echo "Usage:"
  echo "  amd-mode quiet   → cool & silent"
  echo "  amd-mode max     → maximum performance"
  echo "  amd-mode show    → show current curve"
  systemd-tmpfiles --create /usr/lib/tmpfiles.d/amdgpu-pp_od.conf
}

post_upgrade() {
  post_install
}
